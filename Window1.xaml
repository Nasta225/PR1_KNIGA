            <Label Content="Завтра * " Style="{StaticResource Label2}" Width="189" Canvas.Left="455" Canvas.Top="284"/>
            <Label Content="Адреса магазинов" Style="{StaticResource Label3}" Width="189" Canvas.Left="522" Canvas.Top="283"/>
            <Label Content="В налачии" Style="{StaticResource Label2}" Width="189" Canvas.Left="456" Canvas.Top="229"/>
